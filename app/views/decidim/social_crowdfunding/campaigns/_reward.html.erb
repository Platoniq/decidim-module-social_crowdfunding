<div class="column">
  <div class="card card--process">
    <div class="card__content">
      <div class="card__header">
        <span class="card__title">
          <strong>
            <%= t(".contributing", amount: campaign_money(reward["amount"])) %>
          </strong>
          <br>
          <span class="text-small">
            <%= translated_attribute reward["name"] %>
          </span>
        </span>
      </div>

      <div class="card__text">
        <div class="card__text--paragraph">
          <%= render_markdown translated_attribute(reward["description"]) %>
        </div>
      </div>

    </div>

    <div class="card__icondata">
      <ul class="card-data">
        <li class="card-data__item">
          <%= icon "info" %>
        </li>

        <li class="card-data__item">
          <strong class="text-left">
            <%= translated_attribute reward["name"] %>
          </strong>
        </li>
      </ul>
    </div>

    <div class="card__icondata">
      <ul class="card-data">
        <li class="card-data__item">
          <%= icon "tag" %>
        </li>

        <li class="card-data__item">
          <strong>
            <%= t(".contributing", amount: campaign_money(reward["amount"])) %>
          </strong>
        </li>
      </ul>
    </div>

    <div class="card__footer">
      <div class="card__support">
        <% if reward["purchased-units"] > 0 %>
          <span class="backers">
            <%= t(".backers", amount: reward["purchased-units"]) %>
          </span>
        <% end %>
        <% if current_campaign.can_donate? %>
          <%= link_to t(".get"), Decidim::SocialCrowdfunding::Goteo.reward_url(current_campaign, reward), class: "card__button button--sc light button small" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
