<h2><%= t(".title") %></h2>

<% current_campaign.data["rewards"].select { |r| r["type"] == "individual" }.each do |reward| %>
  <div class="definition-data__item">
    <span class="definition-data__number">
      <%= t(".contributing", amount: campaign_money(reward["amount"], current_campaign.data["currency"])) %>
    </span>
    
    <span class="definition-data__title">
      <%= reward["name"] %>
    </span>
    
    <span class="definition-data__text text-left">
      <%= reward["description"] %>
    </span>
  </div>
<% end %>
