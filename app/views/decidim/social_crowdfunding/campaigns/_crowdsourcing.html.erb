<h2><%= t(".title") %></h2>

<% current_campaign.needs.each do |need| %>
  <div class="definition-data__item">
    <span class="definition-data__title">
      <%= translated_attribute(need["name"]) %>
    </span>

    <span class="definition-data__text text-left">
      <%= render_markdown translated_attribute(need["description"]) %>
    </span>
  </div>
<% end %>
