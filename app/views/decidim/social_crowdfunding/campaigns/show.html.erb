<div class="row column view-header">
  <h2 class="heading2"><%= translated_attribute current_campaign.name %></h2>
</div>

<div class="row">
  <div class="columns section view-side mediumlarge-4 mediumlarge-push-8 large-3 large-push-9">
    <div class="card extra">
      <div class="card__content">
        <div class="campaign__date">
          <%= l campaign_date(current_campaign.data), format: :decidim_short %>
        </div>
        <div class="campaign__status">
          <%= campaign_status(current_campaign.data) %>
        </div>
        
        <% if current_campaign.can_donate? %>
          <%= link_to t(".donate"), current_campaign.url, class: "button expanded button--sc", target: :blank %>
        <% else %>
          <%= link_to t(".view"), current_campaign.url, class: "button expanded button--sc", target: :blank %>
        <% end %>
      </div>
    </div>

    <div class="card extra">
      <div class="definition-data">
        <div class="reached definition-data__item">
          <span class="definition-data__title"><%= t(".money.received") %></span>
          <span class="definition-data__number"> <%= campaign_money current_campaign.amount, current_campaign.data["currency"] %> </span>
        </div>
        <div class="optimum definition-data__item">
          <span class="definition-data__title"><%= t(".money.optimum") %></span>
          <span class="definition-data__number"> <%= campaign_money current_campaign.optimum, current_campaign.data["currency"] %> </span>
        </div>
        <div class="minimum definition-data__item">
          <span class="definition-data__title"><%= t(".money.minimum") %></span>
          <span class="definition-data__number"> <%= campaign_money current_campaign.minimum, current_campaign.data["currency"] %> </span>
        </div>
      </div>
    </div>
  </div>

  <div class="columns mediumlarge-8 mediumlarge-pull-4">
    <div class="responsive-embed widescreen">
      <iframe src="<%= campaign_media(current_campaign.data["video-url"]) %>" frameborder="0" style="max-width:none !important;" webkitallowfullscreen mozallowfullscreen>
      </iframe>
    </div>
    
    <%= translated_attribute current_campaign.description %>
  </div>
</div>
